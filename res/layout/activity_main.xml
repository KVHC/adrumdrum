<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	xmlns:tools="http://schemas.android.com/tools"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:orientation="horizontal"
       >
       
          <!-- RadioButtons showing the active step -->
    <ScrollView
	        android:id="@+id/stepScroll"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:layout_alignParentTop="true"
	        android:layout_toLeftOf="@+id/layoutzz"

	        >
	    	<!-- Channels -->
	    	<HorizontalScrollView 
	    	    android:layout_width="fill_parent"
	    	    android:layout_height="wrap_content"
	    	    >
		    	<TableLayout
		            	android:id="@+id/ChannelContainer"
		            	android:orientation="horizontal"
		            	android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			      	    >
		   		</TableLayout>
	   		</HorizontalScrollView>
	    </ScrollView>
	    
	<RelativeLayout 
	    android:id="@+id/layoutzz"
    	android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
   	    >
   	    
   	    <TextView
	        android:id="@+id/textView1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:gravity="top|right"
	        android:text="@string/hello_world" />
   	    
	    <Button
	        android:id="@+id/button1"
	        android:layout_width="100dp"
	        android:layout_height="wrap_content"
	        android:layout_below="@string/hello_world"
	        android:layout_alignParentRight="true"
	        android:text="@string/play_button" />
	    
	    <Button
	        android:id="@+id/buttonAddChannel"
	        android:layout_width="100dp"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/button1"
	        android:layout_alignParentRight="true"
	        android:text="@string/add_channel_button" />
	    
	    <Button
	        android:id="@+id/buttonAddStep"
	        android:layout_width="100dp"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/buttonAddChannel"
	        android:layout_alignParentRight="true"
	        android:text="@string/add_step_button" />
	    
	    <Button
	        android:id="@+id/buttonRemoveStep"
	        android:layout_width="100dp"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/buttonAddStep"
	        android:layout_alignParentRight="true"
	        android:text="@string/remove_step_button" />
	    
	    
    	<SeekBar
	    	android:layout_width="160dp"
	    	android:layout_height="wrap_content"
	    	android:layout_below="@+id/buttonRemoveStep"
	    	android:layout_alignParentRight="true"
	    	android:id="@+id/bpmbar" />
		
		<TextView
		    android:id="@+id/bpmtext"
	    	android:layout_width="160dp"
	    	android:layout_height="wrap_content"
	    	android:layout_below="@+id/bpmbar"
	    	android:gravity="center"
	    	android:text="@string/bpm" />
    </RelativeLayout>
       
   </RelativeLayout>	
