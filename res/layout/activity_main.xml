<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

   	<TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="@string/hello_world" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="@string/play_button" />
    
    
    <!-- RadioButtons showing the active step -->
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/ActiveStepsContainer"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
        
    </TableLayout>
    
    <!-- Channels -->
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/ChannelContainer"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ActiveStepsContainer" >
        
    </TableLayout>

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/bpmrow"
    	android:orientation="horizontal"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
		android:layout_below="@+id/ChannelContainer" >

	<SeekBar
	    android:layout_width="160dp"
	    android:layout_height="wrap_content"
	    android:id="@+id/bpmbar"
	/>

	<SeekBar
	    android:layout_width="160dp"
	    android:layout_height="wrap_content"
		android:id="@+id/panningbar"
	/>
	    
	</LinearLayout>
	
	<LinearLayout
	    xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/textrow"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/bpmrow"
	    android:gravity="center|center_horizontal"
	    android:orientation="horizontal" >
	
	<TextView
	    android:id="@+id/bpmtext"
	    android:layout_width="160dp"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:text="@string/bpm" />

	<TextView
	    android:id="@+id/textView3"
	    android:layout_width="80dp"
	    android:layout_height="wrap_content"
	    android:text="@string/left" />

	<TextView
	    android:id="@+id/textView4"
	    android:layout_width="80dp"
	    android:layout_height="wrap_content"
	    android:gravity="right"
	    android:text="@string/right" />

	</LinearLayout>

			
</RelativeLayout>
